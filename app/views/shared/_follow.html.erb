<% if current_user.following.include?(user)%>
  <%= button_to 'Unfollow', follow_path(current_user.given_follows.find_by(followed_id: user.id)), method: :delete, id: "follow-button", class: "btn btn-secondary"%>
<% else%>
  <%= button_to 'Follow', follows_path(followed_id: user.id), id: "follow-button", class: "btn btn-dark"%>
<%end%>
