<%= form_with(model: @comment, url: "/comments", local: true) do |f| %>
  <%= hidden_field_tag :post_id, post.id %></div>
<div class="d-flex">
  <div class="field me-3 w-100">
    <%= f.text_field :content, class: "form-control", placeholder: "Comment..." %>
  </div>
  <%= f.submit "Comment", class: "btn btn-dark" %>
</div>
<% end %>
