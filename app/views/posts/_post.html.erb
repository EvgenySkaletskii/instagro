<div class="list-group-item mb-2 border rounded" aria-current="true">
  <div class="d-flex w-100 mb-2">
    <%= image_tag avatar_url(@user, 50), class: "me-1 rounded-circle"%>
    <div>
      <h6 class="mb-1"><%= link_to post.user.full_name, post.user %></h5>
      <small><%= time_ago_in_words(post.created_at) %> ago</small>
    </div>
  </div>
  <p class="mb-1"><%= post.content %></p>
  <small>Like/Dislike</small>
</div>
