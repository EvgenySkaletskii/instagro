<div id="user-<%= user.id%>" class="list-group-item mb-2 border rounded user-card" aria-current="true">
  <div class="d-flex mb-2">
    <div>
      <%= image_tag(gravatar_for(user, 50), alt: user.full_name, class: "me-3 rounded-circle")%>
    </div>
    <div class="d-flex flex-column">
      <h6 class="mb-1"><%= link_to user.full_name || "No name", user, class: "user-link" %></h5>
      <small><%= user.email %></small>
      <div>
        <small class="me-1 text-secondary"><%= user.posts.count %> posts</small>
        <small class="me-1 text-secondary"><%= user.followers.count %> followers </small>
        <small class="me-1 text-secondary"><%= user.following.count %> followed </small>
      </div>
    </div>
  </div>
  <small class="text-secondary">Registered <%= time_ago_in_words(user.created_at) %> ago</small>
  <div class="position-absolute end-0 bottom-0 m-2">
    <%= render "shared/follow", user: user%>
  </div>
</div>
