<div class="row gap">
  <div class="col left-column">
    <%= render "shared/user_info", user: current_user%>
    <% if @user == current_user%>
      <%= render "shared/post_form"%>
    <%end%>
  </div>
  <div class="col">
    <% if @user.posts.any? %>
      <h5>Recent posts:</h5>
      <div class="list-group posts">
        <%= render @posts %>
      </div>
    <% end %>
  </div>
</div>
