<div class="row gap">
  <div class="col left-column">
    <%= render "shared/user_info", user: @user%>
    <div class="mt-5 about">
      <h5>About:</h5>
      <p><%= @user.about %></p>
    </div>
    <% if @user == current_user%>
      <%= render "shared/post_form"%>
    <%else%>
      <%= render "shared/follow", user: @user%>
    <%end%>
  </div>
  <div class="col posts">
    <% if @user.posts.any? %>
      <h5>Recent posts:</h5>
      <div class="list-group posts">
        <%= render @posts %>
      </div>
    <% else%>
      <h5>There are no posts from this user</h5>
    <% end %>
  </div>
</div>
